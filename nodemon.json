{
    "restartable": "r",
    "verbose": true,
    "env":
    {
        "NODE_ENV": "development",
        "DEBUG": "casio:*",
        "DEBUG_COLORS": true
    },
    "ignore": [
        "routes/___*.js",
        "routes/___*.html",
        "log/missing.log.js",
        "public/css/*.css",
        "public/js/*.js",
        "test/*",
        "docs/*"
    ],
    "debug": true,
    "ext": "js dust html css scss rb json htpasswd",
    "//exec": "set DEBUG=express-mysql-session* & node --inspect ./bin/www --max_old_space_size=4096",
    "exec": "node --inspect ./bin/www --max_old_space_size=4096"
}
